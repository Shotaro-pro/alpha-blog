<h1>Showing Article list</h1>

<table>
  <thead>
    <tr>
      <th>TITLE</th>
      <th>DESCRIPTION</th>
      <th>ACTION</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>place holder</td>
    </tr>
    <% end %>
  </tbody>
</table>